{
  "compilerOptions": {
    "declaration": true,
    "lib": [
        "ES2022"
     ],
     "target": "ES2022",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./lib",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "rootDir": "src",
     "strict": true,
     "noImplicitOverride": true,
     "esModuleInterop": true,
  },
  "include": [
     "src"
  ],
  "exclude": ["node_modules", "lib", "./.eslintrc.js"]
}